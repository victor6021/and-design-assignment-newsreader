<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ListActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/welcome"
            android:src="@mipmap/welcome"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="110dp"/>


        <ImageView
            android:id="@+id/to"
            android:src="@mipmap/to"
            android:adjustViewBounds="true"
            android:layout_width="165dp"
            android:layout_height="184dp"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            app:layout_constraintRight_toLeftOf="@id/sign_in_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="80dp"
            android:layout_marginStart="24dp"/>


        <ImageView
            android:id="@+id/sign_in_list"
            android:src="@mipmap/signin"
            android:adjustViewBounds="true"
            android:layout_width="165dp"
            android:layout_height="184dp"
            app:layout_constraintTop_toBottomOf="@id/welcome"
            app:layout_constraintLeft_toRightOf="@id/to"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="28dp"/>


        <ImageView
            android:id="@+id/news"
            android:src="@mipmap/news"
            android:adjustViewBounds="true"
            android:layout_width="165dp"
            android:layout_height="184dp"
            app:layout_constraintTop_toBottomOf="@id/to"
            app:layout_constraintRight_toLeftOf="@id/reader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="48dp"
            android:layout_marginStart="24dp"/>


        <ImageView
            android:id="@+id/reader"
            android:src="@mipmap/reader"
            android:adjustViewBounds="true"
            android:layout_width="165dp"
            android:layout_height="184dp"
            app:layout_constraintTop_toBottomOf="@id/sign_in_list"
            app:layout_constraintLeft_toRightOf="@+id/news"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="48dp"
            android:layout_marginStart="216dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>